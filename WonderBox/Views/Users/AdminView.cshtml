@model IEnumerable<WonderBox.Models.Users>
@{
    ViewBag.Title = "AdminView";
}

<h2>AdminView</h2>


@{
    var totalMonthSub = Model.Sum(a => a.MonthlySubscription);
    var totalYearSub = Model.Sum(b => b.YearlySubscription);
    var totalSubRevenue = Model.Sum(c => c.AmountOwed);
    var totalSubscribers = Model.Sum(d => d.MonthlySubscription + d.YearlySubscription);
    decimal totalMonthlyRevenue = Math.Round(Model.Sum(e => e.TotalMonthlyRevenuIncoming ), 2);
    var totalReg = Model.Sum(f => f.TotalRegistered);
    var AverageAge = Model.Average(g => g.Age);
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zipcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountOwed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonthlySubscription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearlySubscription)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zipcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOwed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlySubscription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearlySubscription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>

        </tr>
    }
    <tr>
        <th>
            Total Registered Users
        </th>
        <th>
            Average Age
        </th>
        <th>
            Total Subscriptions
        </th>
        <th>
            Total Monthly Subscriptions
        </th>
        <th>
            Total Yearly Subscritptions
        </th>
        <th>
            Total Revenue
        </th>
        <th>
            Total Monthly Incoming
        </th>
        @*<th>
            Total Male Users
        </th>
        <th>
            Total Female Users
        </th>*@
    </tr>
    <tr>
        <td>
            @totalReg
        </td>
        <td>
            @AverageAge
        </td>
        <td>
            @totalSubscribers
        </td>
        <td>
            @totalMonthSub
        </td>
        <td>
            @totalYearSub
        </td>
        <td>
            @totalSubRevenue
        </td>
        <td>
            @totalMonthlyRevenue
        </td>
        @*@foreach (var item in Model)
        {
            <td>
                @Html.DisplayFor(modelItem => item.TotalMale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFemale)
            </td>
        }*@
    </tr>


</table>